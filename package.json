{
  "name": "must-vscode",
  "displayName": "Markup Language Support Tool",
  "description": "Make link format from URL",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:kubotama/must-vscode.git"
  },
  "engines": {
    "vscode": "^1.68.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:must-vscode.urlToLink"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "must-vscode.urlToLink",
        "title": "Format Link from URL"
      }
    ],
    "configuration": {
      "type": "object",
      "id": "must-vscode",
      "title": "Markup Language Support Tool",
      "properties": {
        "must-vscode.titlePatterns": {
          "description": "The patterns used when formatting the title of a link.",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              },
              "pattern": {
                "type": "string"
              },
              "format": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "jest": "yarn compile && jest --roots=./out/test",
    "test": "jest --roots=./out/test"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/glob": "^7.2.0",
    "@types/jest": "^28.1.1",
    "@types/jsdom": "^16.2.14",
    "@types/node": "17.0.42",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "@vscode/test-electron": "^2.1.4",
    "eslint": "^8.17.0",
    "glob": "^8.0.3",
    "jest": "^28.1.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "jsdom": "^19.0.0"
  }
}
